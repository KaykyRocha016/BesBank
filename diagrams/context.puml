@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_LEFT_RIGHT()

Person(user, "Usuário", "Cliente que cria contas, deposita, saca e consulta saldo/extrato.")

System(bankingSystem, "Sistema de Contas Bancárias", "Sistema que recebe comandos do usuário, gera eventos, processa projeções e fornece consultas.")

System_Ext(eventBroker, "Event Broker", "Kafka / RabbitMQ", "Distribui eventos gerados pelo sistema para outros componentes consumidores.")

Rel(user, bankingSystem, "Envia comandos e realiza consultas", "HTTP/REST")
Rel(bankingSystem, eventBroker, "Publica eventos confirmados")
Rel(eventBroker, bankingSystem, "Retorna eventos para atualização de projeções")

@enduml
